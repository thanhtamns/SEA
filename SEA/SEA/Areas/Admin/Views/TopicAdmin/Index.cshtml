@model PagedList.PagedList<Models.Topic>
@using PagedList.Mvc
@using SEA.Heplers
@{
    ViewBag.Title = "Index";
}

<div class="xs">
    <h2>Index</h2>
    <div class="bs-example4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Parent
                    </th>
                    <th>
                        Order
                    </th>
                    <th>
                        Statu
                    </th>
                    <th>
                        Language
                    </th>
                    <th>
                        Root
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @Display.DisplayNameTopic(item.ParentId)
                        </td>
                        <td>
                            @item.Order
                        </td>
                        <td>
                            @Display.DisplayActive(item.IsActive)
                        </td>
                        <td>
                            @Display.DisplayLanguage(item.LangId)
                        </td>
                        <td>
                            @Display.DisplayNameTopic(item.RootId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id})|
                            @Html.ActionLink("Details", "Details", new { id = item.Id })|
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>

                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>

